include ../mixins
<!DOCTYPE html>
html(lang="pl" ng-app="app")
    head
        meta(charset="UTF-8")
        if (data.view === 'articles')
            link(rel="canonical" href=fullUrl)
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Napollo.pl #{(metaTitle && metaTitle != '')?'- '+metaTitle:''}
        if (metaKeywords && metaKeywords!='')
            meta(name="keywords" content=metaKeywords)
        if (metaDescription && metaDescription != '')
            meta(name="description" content=metaDescription)
        link(rel="icon" type="image/x-icon" href="/favicon.ico")
        include ../core/preload
        include ../core/styles
    body(ng-controller="BodyController as bc")
        include ../core/calulate
        include ../partials/menu/right-links
        include ../partials/menu/top
        include ../partials/menu/mobile-menu
        block content
        include ../partials/menu/bottom
        include ../core/pswp
        include ../partials/contact-form
        include ../partials/cookie
        include ../partials/popup
        .overlayer(id="modalOverlayer" ng-click="bc.closeContactForm()")
        include ../core/scripts
